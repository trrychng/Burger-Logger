<container class="text-center">

<h1 id="burgerTitle">The Burger Logger!</h1>

<div id="readyBox">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li id="ready">
	    {{id}}. {{burger_name}}
	    <button class="devour" data-id="{{id}}" id="devourButton">Devour it!</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div id="eatenBox">
<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li id="eaten">
      {{id}}. {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

</div>

<div id="addBurger">
<form class="create-form">
  <div class="form-group">
    <input type="text" id="newburger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

</container>